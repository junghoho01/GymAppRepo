<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmationActivity"
    android:orientation="vertical"
    android:background="#343434">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/filtration_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmation"
        android:textSize="30dp"
        android:layout_below="@id/img_logo"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_confirmMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirmationMessage"
        android:textSize="18dp"
        android:layout_below="@id/textView"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/tv_verificationCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verification Code *"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@id/tv_confirmMessage"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp" />

    <EditText
        android:id="@+id/et_code"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="number"
        android:hint="4 5 6 7 8 9"
        android:maxLength="6"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="15dp"
        android:layout_below="@id/tv_verificationCode"
        android:background="@drawable/box_edittext_background"/>


    <Button
        android:id="@+id/btn_resend"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Resend Code"
        android:layout_below="@id/et_code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:backgroundTint="#ffe98a"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btn_verify"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:layout_below="@id/btn_resend"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:backgroundTint="#ffe98a"
        android:textColor="@color/black"/>

</RelativeLayout>