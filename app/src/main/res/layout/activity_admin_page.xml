<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminPageActivity"
    android:orientation="vertical"
    android:background="#343434"
    android:scrollbarAlwaysDrawVerticalTrack="true">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffe98a">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:text="Administration"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#55534c"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:src="@drawable/filtration_pic"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp" />

        <Button
            android:id="@+id/btn_deleteUserAccount"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/img_logo"
            android:text="Delete User Account"
            android:textColor="#ffe98a"
            android:drawableLeft="@drawable/ic_baseline_delete_24"
            android:backgroundTint="#55534c"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/btn_viewMemberList"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/btn_deleteUserAccount"
            android:text="View Member List"
            android:drawableLeft="@drawable/ic_baseline_format_list_bulleted_24"
            android:textColor="#ffe98a"
            android:backgroundTint="#55534c"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
    </LinearLayout>

    </ScrollView>

</RelativeLayout>