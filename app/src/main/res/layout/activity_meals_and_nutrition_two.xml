<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MealsAndNutritionTwoActivity"
    android:orientation="vertical"
    android:background="#343434">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffe98a">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meals and Nutritions"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#55534c"/>

    </RelativeLayout>


    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/filtration_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_below="@id/relativeLayout2"/>

    <Button
        android:id="@+id/btn_searchRecipe"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/img_logo"
        android:text="Search Recipe"
        android:textColor="#ffe98a"
        android:drawableLeft="@drawable/ic_baseline_search_24"
        android:backgroundTint="#55534c"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <Button
        android:id="@+id/btn_mealsNutritionAnalysis"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/btn_searchRecipe"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="19dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#55534c"
        android:drawableLeft="@drawable/ic_baseline_analytics_24"
        android:text="Meals Nutrition Analysis"
        android:textColor="#ffe98a" />

    <Button
        android:id="@+id/btn_trackNutritionGain"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/btn_mealsNutritionAnalysis"
        android:text="Track Nutrition Gain"
        android:drawableLeft="@drawable/ic_baseline_fastfood_24"
        android:textColor="#ffe98a"
        android:backgroundTint="#55534c"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:background="#ffe98a"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nav_section1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:contentDescription="Section 1"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:src="@drawable/baseline_sports_gymnastics_24" />

        <ImageView
            android:id="@+id/nav_section2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:contentDescription="Section 1"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:src="@drawable/baseline_set_meal_24" />

        <ImageView
            android:id="@+id/nav_section3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:contentDescription="Section 1"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:src="@drawable/baseline_home_24" />

        <ImageView
            android:id="@+id/nav_section4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:contentDescription="Section 1"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:src="@drawable/baseline_signal_cellular_alt_24" />

        <ImageView
            android:id="@+id/nav_section5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:contentDescription="Section 1"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:src="@drawable/baseline_person_24" />

    </LinearLayout>

</RelativeLayout>