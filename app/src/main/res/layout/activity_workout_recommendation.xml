<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkoutRecommendationActivity"
    android:orientation="vertical"
    android:background="#343434">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffe98a">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:text="Workout Recommendation"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#55534c"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_workoutRecommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeLayout2"
        android:text="Based on your biograhical information and progress, these are the recommendation:"
        android:padding="15dp"
        android:textSize="18sp"
        android:textColor="#ffe98a"
        android:background="#55534c"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <TableLayout
        android:id="@+id/tableWorkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/tv_workoutRecommend"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:background="#55534c">

        <TableRow android:paddingTop="10dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gym" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_firstWorkout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Push Ups :"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:paddingLeft="20dp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/tv_pushUpReps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#ffe98a"
                        android:text="15 reps x 3 sets"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:paddingLeft="20dp" />

                </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/imageViewSquat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/squat" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_secondWorkout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Squats :"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_squatReps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#ffe98a"
                    android:text="15 reps x 3 sets"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingLeft="20dp" />

            </LinearLayout>

        </TableRow>
        <TableRow
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/imageViewJogging"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jogging" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_thirdWorkout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Jogging :"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_jogsReps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#ffe98a"
                    android:text="15 reps x 3 sets"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingLeft="20dp" />

            </LinearLayout>
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tableWorkout"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#ffe98a"
        android:text="Confirm"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:background="#ffe98a"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nav_section1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:contentDescription="Section 1"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:src="@drawable/baseline_sports_gymnastics_24" />

        <ImageView
            android:id="@+id/nav_section2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:contentDescription="Section 1"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:src="@drawable/baseline_set_meal_24" />

        <ImageView
            android:id="@+id/nav_section3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:contentDescription="Section 1"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:src="@drawable/baseline_home_24" />

        <ImageView
            android:id="@+id/nav_section4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:contentDescription="Section 1"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:src="@drawable/baseline_signal_cellular_alt_24" />

        <ImageView
            android:id="@+id/nav_section5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:contentDescription="Section 1"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:src="@drawable/baseline_person_24" />

    </LinearLayout>

</RelativeLayout>